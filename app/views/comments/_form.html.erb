<%= form_for [@article, @comment] do |f| %>
  <div class="form-group">
    <%= f.label :user %>
    <%= f.text_field :user, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_field :content, class: 'form-control' %>
  </div>
  <%= f.submit %>
<% end %>
