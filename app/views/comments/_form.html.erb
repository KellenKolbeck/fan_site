<%= form_for [@article, @comment] do |f| %>
  <%= f.hidden_field :parent_id %>
  <div class="form-group">
    <%= f.label :user %>
    <%= f.text_field :user, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, cols: 10, rows: 10,  class: 'form-control' %>
  </div>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
